@page "/cart"
@inject ICartService CartService
@inject IProductService ProductService
@inject NavigationManager Navigation
@rendermode InteractiveServer
@using EShop.Services
@using EShop.Models

<PageTitle>Shopping Cart - EShop</PageTitle>

<h1>Shopping Cart</h1>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (!cartItems.Any())
{
    <div class="alert alert-info">
        Your cart is empty. <a href="/products">Continue shopping</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in cartItems)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(item.ImageFileName))
                                {
                                    <img src="/images/@item.ImageFileName" alt="@item.ProductName" style="width: 50px; height: 50px; object-fit: cover;" class="me-3" />
                                }
                                <span>@item.ProductName</span>
                            </div>
                        </td>
                        <td>$@item.Price.ToString("F2")</td>
                        <td>
                            <input type="number" value="@item.Quantity" min="1" max="@GetMaxQuantity(item.ProductId)"
                                   @onchange="@((e) => UpdateQuantity(item.ProductId, int.Parse(e.Value?.ToString() ?? "1")))"
                                   class="form-control" style="width: 80px;" />
                            <small class="text-muted">Max: @GetMaxQuantity(item.ProductId)</small>
                        </td>
                        <td>$@item.TotalPrice.ToString("F2")</td>
                        <td>
                            <button class="btn btn-sm btn-danger" @onclick="() => RemoveItem(item.ProductId)">Remove</button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                    <td colspan="2"><strong>$@total.ToString("F2")</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>
    
    <div class="d-flex justify-content-between mt-4">
        <a href="/products" class="btn btn-outline-primary">Continue Shopping</a>
        <div>
            <button class="btn btn-outline-danger me-2" @onclick="ClearCart">Clear Cart</button>
            <a href="/checkout" class="btn btn-success">Proceed to Checkout</a>
        </div>
    </div>
}

@code {
    private List<CartItem> cartItems = new();
    private decimal total = 0;
    private Dictionary<int, int> productStocks = new();
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadCart();
        await LoadProductStocks();
    }

    private async Task LoadCart()
    {
        cartItems = await CartService.GetCartItemsAsync();
        total = await CartService.GetCartTotalAsync();
    }

    private async Task LoadProductStocks()
    {
        productStocks.Clear();
        foreach (var item in cartItems)
        {
            var product = await ProductService.GetProductByIdAsync(item.ProductId);
            if (product != null)
            {
                productStocks[item.ProductId] = product.Stock;
            }
        }
    }

    private async Task UpdateQuantity(int productId, int quantity)
    {
        // Clear previous error
        errorMessage = null;

        // Check stock limit
        if (productStocks.ContainsKey(productId) && quantity > productStocks[productId])
        {
            var item = cartItems.FirstOrDefault(c => c.ProductId == productId);
            var productName = item?.ProductName ?? "Product";
            var maxStock = productStocks[productId];
            
            errorMessage = $"Cannot set quantity to {quantity}. Only {maxStock} '{productName}' available in stock!";
            
            // Auto-hide error after 5 seconds
            _ = Task.Delay(5000).ContinueWith(_ => 
            {
                errorMessage = null;
                InvokeAsync(StateHasChanged);
            });
            
            return; // Don't update if exceeds stock
        }

        await CartService.UpdateQuantityAsync(productId, quantity);
        await LoadCart();
    }

    private async Task RemoveItem(int productId)
    {
        await CartService.RemoveFromCartAsync(productId);
        await LoadCart();
        await LoadProductStocks();
    }

    private async Task ClearCart()
    {
        await CartService.ClearCartAsync();
        await LoadCart();
        productStocks.Clear();
    }

    private int GetMaxQuantity(int productId)
    {
        return productStocks.ContainsKey(productId) ? productStocks[productId] : 99;
    }
}
