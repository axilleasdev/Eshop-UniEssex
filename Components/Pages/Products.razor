@page "/products"
@inject AppDbContext DbContext
@rendermode InteractiveServer
@using EShop.Data
@using EShop.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Products - EShop</PageTitle>

<h1>Our Products</h1>

<div class="row">
    @foreach (var product in products)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(product.ImageFileName))
                {
                    <img src="/images/@product.ImageFileName" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <span class="text-muted">No Image</span>
                    </div>
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">
                        <strong>Price: $@product.Price.ToString("F2")</strong><br />
                        <small class="text-muted">Stock: @product.Stock available</small>
                    </p>
                    <div class="mt-auto">
                        @if (product.Stock > 0)
                        {
                            <button class="btn btn-primary" @onclick="() => AddToCart(product)">Add to Cart</button>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>Out of Stock</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!products.Any())
{
    <div class="alert alert-info">No products available at the moment.</div>
}

@if (cartMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @cartMessage
        <button type="button" class="btn-close" @onclick="ClearMessage"></button>
    </div>
}

@code {
    private List<Product> products = new();
    private string? cartMessage;

    protected override async Task OnInitializedAsync()
    {
        products = await DbContext.Products.Where(p => p.Stock > 0).ToListAsync();
    }

    private void AddToCart(Product product)
    {
        // Simple cart simulation - in real app, you'd use a cart service
        cartMessage = $"'{product.Name}' added to cart!";
        
        // Auto-hide message after 3 seconds
        _ = Task.Delay(3000).ContinueWith(_ => 
        {
            cartMessage = null;
            InvokeAsync(StateHasChanged);
        });
    }

    private void ClearMessage()
    {
        cartMessage = null;
    }
}
