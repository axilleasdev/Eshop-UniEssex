@page "/products"
@inject IProductService ProductService
@inject ICartService CartService
@inject NavigationManager Navigation
@rendermode InteractiveServer
@using EShop.Services
@using EShop.Models

<PageTitle>Products - EShop</PageTitle>

<h1>Our Products</h1>

<div class="row">
    @foreach (var product in products)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(product.ImageFileName))
                {
                    <img src="/images/@product.ImageFileName" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover; cursor: pointer;" @onclick="() => ViewDetails(product.Id)" />
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px; cursor: pointer;" @onclick="() => ViewDetails(product.Id)">
                        <span class="text-muted">No Image</span>
                    </div>
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title" style="cursor: pointer;" @onclick="() => ViewDetails(product.Id)">@product.Name</h5>
                    <p class="card-text">
                        <strong>Price: $@product.Price.ToString("F2")</strong><br />
                        <small class="text-muted">Stock: @product.Stock available</small>
                    </p>
                    <div class="mt-auto">
                        <button class="btn btn-outline-primary btn-sm me-2" @onclick="() => ViewDetails(product.Id)">View Details</button>
                        @if (product.IsAvailable)
                        {
                            <button class="btn btn-primary btn-sm" @onclick="() => AddToCart(product)">Add to Cart</button>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-sm" disabled>Out of Stock</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!products.Any())
{
    <div class="alert alert-info">No products available at the moment.</div>
}

@if (cartMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @cartMessage
        <button type="button" class="btn-close" @onclick="ClearMessage"></button>
    </div>
}

@code {
    private List<Product> products = new();
    private string? cartMessage;

    // Dependency Injection - χρήση των services μέσω @inject
    protected override async Task OnInitializedAsync()
    {
        products = await ProductService.GetAvailableProductsAsync();
    }

    private void ViewDetails(int productId)
    {
        Navigation.NavigateTo($"/products/{productId}");
    }

    private async Task AddToCart(Product product)
    {
        var success = await CartService.AddToCartAsync(product.Id);
        if (success)
        {
            cartMessage = $"'{product.Name}' added to cart!";
        }
        else
        {
            cartMessage = $"Cannot add '{product.Name}' - not enough stock!";
        }
        
        await Task.Delay(3000);
        cartMessage = null;
        StateHasChanged();
    }

    private void ClearMessage()
    {
        cartMessage = null;
    }
}
